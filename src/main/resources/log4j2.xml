<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="logPath">logs</Property>
        <Property name="logFileName">agent</Property>
        <Property name="consolePattern">%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
        <Property name="filePattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>
    
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${consolePattern}"/>
        </Console>

        <RollingFile name="FileAppender" 
                     fileName="${logPath}/${logFileName}.log"
                     filePattern="${logPath}/${logFileName}-%d{yyyy-MM-dd}-%i.log.gz"
                     ignoreExceptions="false">
            <PatternLayout pattern="${filePattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10">
                <Delete basePath="${logPath}" maxDepth="2">
                    <IfFileName glob="*/${logFileName}-*.log.gz"/>
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
        
        <!-- Fallback appender that writes to temp directory if main file fails -->
        <RollingFile name="FallbackFileAppender" 
                     fileName="${sys:java.io.tmpdir}/agent-fallback.log"
                     filePattern="${sys:java.io.tmpdir}/agent-fallback-%d{yyyy-MM-dd}-%i.log.gz"
                     ignoreExceptions="true">
            <PatternLayout pattern="${filePattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
    </Appenders>
    
    <Loggers>
        <Logger name="org.zerwhit" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="FallbackFileAppender" level="ERROR"/>
        </Logger>
        
        <Logger name="org.tzd.agent" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="FallbackFileAppender" level="ERROR"/>
        </Logger>
        
        <Logger name="org.apache.logging.log4j" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
            <AppenderRef ref="FallbackFileAppender" level="ERROR"/>
        </Root>
    </Loggers>
</Configuration>